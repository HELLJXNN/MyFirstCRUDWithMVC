@model MyFirstCRUDWithMVC.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h1 class="mb-4">User Details</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white py-3">
                <h5 class="mb-0">Details for @Model.UserName</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Html.DisplayFor(model => model.UserName)</strong>
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.UserDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.UserDate)
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.UserPassword)
                    </dt>
                    <dd class="col-sm-8">
                        ********
                    </dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-2"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>