@model MyFirstCRUDWithMVC.Models.User

@{
    ViewData["Title"] = "Create User";
}

<h1 class="mb-4">Create New User</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0">User Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserDate" class="form-label"></label>
                        <input asp-for="UserDate" class="form-control" type="date" />
                        <span asp-validation-for="UserDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserPassword" class="form-label"></label>
                        <input asp-for="UserPassword" class="form-control" type="password" />
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i> Create User
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}