@model MyFirstCRUDWithMVC.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h1 class="mb-4">Edit User</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark py-3">
                <h5 class="mb-0">Edit User Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserDate" class="form-label"></label>
                        <input asp-for="UserDate" class="form-control" type="date" />
                        <span asp-validation-for="UserDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserPassword" class="form-label"></label>
                        <input asp-for="UserPassword" class="form-control" type="text" />
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" value="Save" class="btn btn-warning btn-lg text-dark">
                            <i class="bi bi-save me-2"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}