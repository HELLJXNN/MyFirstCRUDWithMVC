@model MyFirstCRUDWithMVC.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="mb-4">Delete User</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white py-3">
                <h3 class="mb-0">Are you sure you want to delete this user?</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title text-danger mb-3">Irreversible Action</h5>
                <p class="card-text mb-4">
                    Deleting this user will permanently remove all associated data. This action cannot be undone.
                </p>

                <dl class="row">
                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Html.DisplayFor(model => model.UserName)</strong>
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.UserDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.UserDate)
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        @Html.DisplayNameFor(model => model.UserPassword)
                    </dt>
                    <dd class="col-sm-8">
                        ********
                    </dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>